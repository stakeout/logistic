.request-form
	position fixed
	left calc(50% - 555px)
	top 5%
	z-index 1002
	// display block
	xxs-block({
		position: absolute
		top: 45px
		width: 90%
		left: calc(50% - 45%)
	})
	&__close-btn
		display none
		xxs-block({
			display: block
			position: absolute
			right: -8px
			top: -45px
			color: $c_white
			font-size: 40px
			background-color: transparent
			border: none
			z-index: 1002
		})
	&__inner
		max-width 1110px
		padding 30px
		color $c_text
		font-size 14px
		font-weight 300
		line-height 24px
		background-color $c_white
		border-radius 5px
		xxs-block({
			display: flex
			flex-direction: column
			padding: 10px
			padding-top: 20px
		})
		label
			position relative
			xxs-block({
				width: 100%
				margin-bottom: 20px
			})
		input[type=checkbox]
			display none
		input
			&:not([type=checkbox]):not([type=submit])
				width 240px
				height 50px
				padding-left 60px
				background-color #e8eaf6
				border-radius 5px
				outline none
				xxs-block({
					width: 100%	
				})
				&::-webkit-input-placeholder
						color $c_text
						opacity .5
				&::-moz-placeholder
						color $c_text
						opacity .5
				&:-moz-placeholder
						color $c_text
						opacity .5
				&:-ms-input-placeholder
						color $c_text
						opacity .5
				&:focus
					background-color: #e8eaf6
					transition all .2s ease
					&::-webkit-input-placeholder
						text-indent: 300px
						transition: text-indent 0.6s ease
					&::-moz-placeholder
						text-indent: 300px
						transition: text-indent 0.6s ease
					&:-moz-placeholder
						text-indent: 300px
						transition: text-indent 0.6s ease
					&:-ms-input-placeholder
						text-indent: 300px
						transition: text-indent 0.6s ease
				&:hover
					background-color: #f3f4fa
					transition all .2s ease
		textarea
			overflow hidden
			&::-webkit-input-placeholder
					color $c_text
					opacity .5
			&::-moz-placeholder
					color $c_text
					opacity .5
			&:-moz-placeholder
					color $c_text
					opacity .5
			&:-ms-input-placeholder
					color $c_text
					opacity .5
			&:focus
				background-color: #e8eaf6
				transition all .2s ease
				&::-webkit-input-placeholder
					line-height: 100px
					transition: line-height 0.5s ease
				&::-moz-placeholder
					line-height: 100px
					transition: line-height 0.5s ease
				&:-moz-placeholder
					line-height: 100px
					transition: line-height 0.5s ease
				&:-ms-input-placeholder
					line-height: 100px
					transition: line-height 0.5s ease
			&:hover
				background-color: #f3f4fa
				transition all .2s ease
	&__icon
		position absolute
		top calc(50% - 12px)
		left 15px
	&__top-row
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		justify-content space-between
		align-content: space-between;
		align-items: center;
		min-height 130px
		margin-bottom 30px
		// outline 1px solid red
		xxs(margin-bottom, 0)
	&__form-group
		flex-basis 48.5%
		xxs-block({
			flex-basis: 100%
			padding-bottom: 30px
		})
		.wrap
			display -webkit-flex
			display -ms-flex
			display flex
			flex-wrap wrap
			justify-content space-between
			align-items center
			position relative
		.arrow
			display none
			position absolute
			width 60px
			height 2px
			top calc(50% - 1px)
			left calc(50% - 70px)
			background-color #f50
			animation error .5s infinite
			&.error-checkbox
				display block
		label
			position relative
			width 50px
			height 50px
			background-color #e8eaf6
			border-radius 5px
			cursor pointer
		span
			flex-basis 50%
			xxs-block({
				flex-basis: 100%
				padding-top: 10px
				padding-bottom: 10px
			})
	&__bottom-row
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		justify-content space-between
		// align-content: space-between;
		min-height 260px
		// outline 1px solid green
		.from,
		.where
			position relative
			width 240px
			xxs-block({
			  margin-bottom: 20px
			})
			svg
				position static
				display inline-block
				vertical-align middle
		.from
			span
				padding-left 30px
		.where
			span
				padding-right 30px
			svg
				transform rotate(180deg)
			xxs(order, 4)
	&__left-col,
	&__right-col
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		align-items: center;
		flex-basis 48.5%
		// outline 1px solid
		xxs-block({
			flex-basis: 100%	
		})
	&__left-col
		justify-content: space-between;
		label
			&:nth-of-type(1)
				xxs(order, 1)
			&:nth-of-type(2)
				xxs(order, 5)
			&:nth-of-type(3)
				xxs(order, 2)
			&:nth-of-type(4)
				xxs(order, 6)
			&:nth-of-type(5)
				xxs(order, 3)
			&:nth-of-type(6)
				xxs(order, 7)
			
	&__right-col
		span
			width 100%
			xxs-block({
				margin-bottom: 15px
				padding-top: 10px
			})
		input[type=checkbox]
			display none
			&:checked + label:after
				top calc(50% - 13px)
				left 3px
				content: 'âœ”'
				color $c_blue
				font-size 20px
				opacity: 1
				transform: scale(1)
		label
			position relative
			display block
			flex-basis 240px
			padding-left 35px
			cursor pointer
			&:before,
			&:after
				position absolute
				content ''
				left 0
				width 20px
				height 20px
			&:before
				top calc(50% - 10px)
				border 2px solid #e8eaf6
			&:after
				display block
				opacity: 0
				transform: scale(0)
				transition all .2s
	&__textarea
		width 100%
		height 50px
		padding-left 30px
		padding-top 13px
		border none
		border-radius 5px
		background-color #e8eaf6
		resize none
		&::-webkit-input-placeholder 
				color $c_text
				opacity .5
		&::-moz-placeholder          
				color $c_text
				opacity .5
		&:-moz-placeholder           
				color $c_text
				opacity .5
		&:-ms-input-placeholder      
				color $c_text
				opacity .5
	&__footer
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		justify-content space-between
		flex-grow 1
		padding-top 30px
		xxs-block({
		  flex-direction: column-reverse
			padding-top: 30px
		})
		p
			svg
				position static
				display inline-block
				vertical-align middle
				xxs(vertical-align, top)
			span
				padding-left 30px
				xxs-block({
					display: inline-block
					vertical-align: top
					padding-left: 15px
				  width: 90%
				})
	&__submit
		width 240px
		padding-top 18px
		padding-bottom 18px
		font-weight 700
		border-radius 5px
		xxs-block({
		  margin-bottom: 20px
			align-self: center
		})
@keyframes error
	0%
		transform translateX(0)
	50%
		transform translateX(20px)
	100%
		transform translateX(0)
