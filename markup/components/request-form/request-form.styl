.request-form
	position fixed
	left calc(50% - 555px)
	top 10%
	z-index 1002
	display block
	&__inner
		// display -webkit-flex
		// display -ms-flex
		// display flex
		// flex-direction column
		// flex-wrap wrap
		max-width 1110px
		padding 30px 30px 60px
		color $c_text
		font-size 14px
		font-weight 300
		line-height 24px
		background-color $c_white
		border-radius 5px
		label
			position relative
		input[type=checkbox]
			display none
		input
			&:not([type=checkbox]):not([type=submit])
				width 240px
				height 50px
				padding-left 60px
				background-color #e8eaf6
				border-radius 5px
				outline none
				&::-webkit-input-placeholder
						color $c_text
						opacity .5
				&::-moz-placeholder
						color $c_text
						opacity .5
				&:-moz-placeholder
						color $c_text
						opacity .5
				&:-ms-input-placeholder
						color $c_text
						opacity .5
				&:focus
					background-color $c_white
					box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.16),0px 0px 1px 0px rgba(0, 0, 0, 0.08);
					&::-webkit-input-placeholder
						text-indent: 300px
						transition: text-indent 0.6s ease
					&::-moz-placeholder
						text-indent: 300px
						transition: text-indent 0.6s ease
					&:-moz-placeholder
						text-indent: 300px
						transition: text-indent 0.6s ease
					&:-ms-input-placeholder
						text-indent: 300px
						transition: text-indent 0.6s ease
				&:hover
					box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.16),0px 0px 1px 0px rgba(0, 0, 0, 0.08);
	&__icon
		position absolute
		top calc(50% - 12px)
		left 15px
	&__top-row
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		justify-content space-between
		align-content: space-between;
		align-items: center;
		min-height 130px
		margin-bottom 60px
		// outline 1px solid red
	&__form-group
		flex-basis 48.5%
		width 100%
		// outline 2px dotted black
		.wrap
			display -webkit-flex
			display -ms-flex
			display flex
			flex-wrap wrap
			justify-content space-between
			align-items center
		label
			position relative
			width 50px
			height 50px
			background-color #e8eaf6
			border-radius 5px
			cursor pointer
		span
			flex-basis 50%
	&__bottom-row
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		justify-content space-between
		// align-content: space-between;
		min-height 260px
		// outline 1px solid green
		.from,
		.where
			position relative
			width 240px
			svg
				position static
				display inline-block
				vertical-align middle
		.from
			span
				padding-left 30px
		.where
			span
				padding-right 30px
			svg
				transform rotate(180deg)
	&__left-col,
	&__right-col
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		align-items: center;
		flex-basis 48.5%
		// outline 1px solid
	&__left-col
		justify-content: space-between;
	&__right-col
		span
			width 100%
		input[type=checkbox]
			display none
			&:checked + label:after
				top calc(50% - 13px)
				left 3px
				content: 'âœ”'
				color $c_blue
				font-size 20px
				opacity: 1
				transform: scale(1)
		label
			position relative
			display block
			flex-basis 240px
			padding-left 35px
			cursor pointer
			&:before,
			&:after
				position absolute
				content ''
				left 0
				width 20px
				height 20px
			&:before
				top calc(50% - 10px)
				border 2px solid #e8eaf6
			&:after
				display block
				opacity: 0
				transform: scale(0)
				transition all .2s
	&__textarea
		width 100%
		height 50px
		padding-left 30px
		padding-top 13px
		border none
		border-radius 5px
		background-color #e8eaf6
		resize none
		&::-webkit-input-placeholder 
				color $c_text
				opacity .5
		&::-moz-placeholder          
				color $c_text
				opacity .5
		&:-moz-placeholder           
				color $c_text
				opacity .5
		&:-ms-input-placeholder      
				color $c_text
				opacity .5
	&__footer
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		justify-content space-between
		flex-grow 1
		padding-top 60px
		p
			svg
				position static
				display inline-block
				vertical-align middle
			span
				padding-left 30px
	&__submit
		width 240px
		padding-top 18px
		padding-bottom 18px
		font-weight 700
		border-radius 5px
