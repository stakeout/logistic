.contact-form
	color $c_text
	font-size 14px
	line-height 24px
	font-weight 300
	&__inner
		display flex
		flex-wrap wrap
		padding-left 210px
		padding-right 210px
	&__title
		width 100%
		padding-bottom 60px
		text-transform uppercase
	&__col-left
		width 360px
		display flex
		flex-wrap wrap
	&__col-right
		display flex
		width 360px
		margin-left 30px
	label
		position relative
		width 100%
	input, textarea
		width 100%
		margin-bottom 30px
		padding-top 13px
		padding-right 13px
		padding-left 55px
		padding-bottom 13px
		font-size 14px
		line-height 24px
		background-color #e8eaf6
		border none
		outline none
		border-radius 5px
		resize none
	::-webkit-input-placeholder
		color #455a64
	svg
		position absolute
		top 14px
		left 14px
	span 
		position relative
		padding 18px 0
		padding-left 50px
		svg
			top 17px
			left 0
	button
		width 240px
		margin-left auto
		padding 18px 0
		font-weight 700
