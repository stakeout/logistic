.slick-loading
	.slick-list
		background #fff url('%=static=%/general/ajax-loader.gif') center center no-repeat

@font-face
	font-family 'slick'
	font-weight normal
	font-style normal
	src url('../fonts/slick.woff') format('woff')


.slick-prev,
.slick-next
	font-size 0
	line-height 0
	position absolute
	top calc(50% - 60px)
	display block
	width 30px
	height 40px
	padding 0
	cursor pointer
	color transparent
	border none
	outline none
	background transparent
	z-index 20

.slick-prev:hover,
.slick-prev:focus,
.slick-next:hover,
.slick-next:focus
	color transparent
	outline none
	background transparent

.slick-prev:hover:before,
.slick-prev:focus:before,
.slick-next:hover:before,
.slick-next:focus:before
	opacity 1

.slick-prev.slick-disabled:before,
.slick-next.slick-disabled:before
	opacity .25

.slick-prev:before,
.slick-next:before
	// font-family 'slick'
	position absolute
	top calc(50% - 7px)
	display block
	width 15px
	height 15px
	border 2px solid $c_blue
	border-left none
	border-top none
	font-size 20px
	line-height 1
	opacity .75
	color $c_blue
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

.slick-prev
	left -18px
	&:before
		content ''
		right calc(50% - 15px)
		transform rotate(135deg)
		

[dir='rtl']
	.slick-prev
		right -25px
		left auto
		&:before
			content '→'
	.slick-next
		right auto
		left -25px
		&:before
			content '←'

.slick-next
	right -18px
	&:before
		content ''
		left calc(50% - 15px)
		transform rotate(-45deg)

.slick-dotted
	&.slick-slider
		margin-bottom 30px

.slick-dots
	position absolute
	bottom -25px
	display block
	width 100%
	padding 0
	margin 0
	list-style none
	text-align center
	li
		position relative
		display inline-block
		width 20px
		height 20px
		margin 0 5px
		padding 0
		cursor pointer
		button
			font-size 0
			line-height 0
			display block
			width 20px
			height 20px
			padding 5px
			cursor pointer
			color transparent
			border 0
			outline none
			background transparent
			&:before
				font-family 'slick'
				font-size 10px
				line-height 20px
				position absolute
				top 0
				left 0
				width 20px
				height 20px
				content '•'
				text-align center
				opacity .25
				color black
				-webkit-font-smoothing antialiased
				-moz-osx-font-smoothing grayscale
		&.slick-active
			button
				&:before
					opacity .75
					color black

.slick-dots li button:hover,
.slick-dots li button:focus
	outline none

.slick-dots li button:hover:before,
.slick-dots li button:focus:before
	opacity 1
