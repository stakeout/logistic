.language
	padding-left 55px
	xxs-block({
		position: absolute
		left: 20px
		top: 30px
		padding-left: 0
	})
	span
		display block
		width 40px
		height 20px
		color #3f51b5
		font-size 12px
		font-weight 500
		line-height 22px
		text-transform uppercase
		text-align center
		background-color $c_white
		border-radius 10px
		cursor pointer
		xxs-block({
			font-size: 18px
			
		})
		&.stick
			color $c_white
			background-color $c_blue
