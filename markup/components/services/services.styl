.services
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
	&__item
		display -webkit-flex
		display -ms-flex
		display flex
		flex-direction column
		flex-basis 16.666%
		padding-bottom 65px
		padding-top 65px
		text-align center
		font-size 14px
		line-height 21px
		box-sizing border-box
		&:not(:last-child)
			border-right 2px solid #e8eaf6
		&:hover
			background $c_light-blue
		b 
			display block
			width 180px
			margin 0 auto
			padding 0 15px
			margin-bottom 35px
			font-weight: 500;
			color $c_dark-blue
			text-transform uppercase
		p 
			margin-top auto
			padding 0 30px
			font-weight 400
			color $c_medium-blue
	&__icon
		align-self center
		margin-bottom 65px
