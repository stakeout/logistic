.services
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
	&__item
		position relative
		flex-basis 16.6%
		padding-top 175px
		padding-bottom 65px
		text-align center
		font-size 1.4rem
		line-height 21px
		box-sizing border-box
		&:not(:last-child)
			border-right 2px solid #e8eaf6
			// только через этот костыль вместил
			margin-left -2px
		&:before
			position absolute
			content ""
			width 88px
			height 46px
			top 65px
			left calc(50% - 44px)
			outline 1px dashed
		&:hover
			background $c_light-blue
		b 
			display block 
			padding 0 40px
			margin-bottom 35px
			font-weight: 500;
			color $c_dark-blue
			text-transform uppercase
		p 
			padding 0 30px
			font-weight 400
			color $c_medium-blue
