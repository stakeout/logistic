include ../../full-viewport-width/full-viewport-width
include ../../map-large/map-large
include ../../reviews/reviews
include ../../clients/clients
include ../../map/map
include ../../solutions/solutions
include ../../additional-services/additional-services
include ../../video/video
include ../../request-form/request-form
mixin main()
	+b.MAIN.page-content
		+video({
			bgPath: '__static__general/bg_main.png',
			videoPath: '__static__/img/general/video/multimodal.mp4'
		})
		+e.inner
			+full-viewport-width(services.multimodal)
			.content
				p.text.center Главной его задачей является снижение расходов и времени поставки. При этом логистическая компания выступает единым организационным и координационным центром, что очень удобно для клиента.  Для организации мультимодальных перевозок используют всю транспортную инфраструктуру: терминалы, консолидационные склады, порты, аэропорты и др., что предполагает высочайшую степень координации действий всех участников логистического процесса.
			+b.SECTION.service-advantages
				+e.inner.center
					+e.H2.title.heading._h2 Преимущества
					+e.UL.list
						+e.LI.item
							+e.IMG.icon(src="__static__img/content/services/5/icon-1.svg", width='60' height='60')
							b Высокий уровень сервиса
							p.text Все возможные трудности в перевозке стараемся предусмотреть на стадии планирования отгрузки, так как все сотрудники имеют большой опыт  работы в организации международных грузоперевозок.
						+e.LI.item
							+e.IMG.icon(src="__static__img/content/services/5/icon-2.svg", width='60' height='60')
							b Мы - надежный партнер!
							p.text Мы предоставляем возможность интеграции ваших бизнес проектов в уже существующие логистические  схемы и маршруту, что позволит снизить затраты на транспортные услуги до минимума. Осуществляем перевозки грузов со строгими датами загрузки и доставки.
						+e.LI.item
							+e.IMG.icon(src="__static__img/content/services/5/icon-3.svg", width='60' height='60')
							b Опыт
							p.text Мы выгодно отличаемся от других операторов рынка продуманными схемами доставки и подбором максимально выгодного решения для клиента.
						+e.LI.item
							+e.IMG.icon(src="__static__img/content/services/5/icon-4.svg", width='60' height='60')
							b Грамотное планирование
							p.text Мы предлагаем: разработку выгодного и удобного маршрута следования, расчет стоимости, времени поставки, подготовку сопроводительной документации, погрузку/разгрузку груза, таможенную очистку, складское хранение, доставку «до двери».
			+b.SECTION.progress
				+e.inner.center
					+e.H2.title.heading._h2 Ход выполнения
					+e.UL.list
						+e.LI.item
							img(src='__static__img/content/progress-icons/order.gif')
							b Заполнение
								br
								| заявки
						+e.LI.item
							img(src='__static__img/content/progress-icons/registration.gif')
							b Подписание необходимых документов
						+e.LI.item
							img(src='__static__img/content/progress-icons/cargo_sending.gif')
							b Отправка груза в необходимую точку мира
						+e.LI.item
							img(src='__static__img/content/progress-icons/delivery.gif')
							b Доставка "до двери"
								br
								| клиента
			+b.SECTION.directions-list
				+e.inner.center
					+e.H2.title.heading._h1 наши направления
					+b.direction-list
						+e.A.link.waves-effect.waves-light.style(href='russian-direction.html')
							span Россия
							p Грузоперевозки сборных и комплектных грузов, экспорт и иморт из России в Беларусь и в Беларусь из&nbsp;России
						+e.A.link.waves-effect.waves-light.style(href='asian-direction.html')
							span Азия
							p Грузоперевозки сборных и комплектных грузов, экспорт и иморт из Азии в Беларусь и в Беларусь из&nbsp;Азии
						+e.A.link.waves-effect.waves-light.style(href='european-direction.html')
							span Европа
							p Грузоперевозки сборных и комплектных грузов, экспорт и иморт из России в Беларусь и в Беларусь из&nbsp;России
						+e.A.link.waves-effect.waves-light.style(href='american-direction.html')
							span Америка
							p Грузоперевозки сборных и комплектных грузов, экспорт и иморт из России в Беларусь и в Беларусь из&nbsp;России
			+map-large
			+solutions(solutions)
			+b.SECTION.about-specialist._5
				+e.inner.center
					+e.info
						+e.H2.title.heading._h1 Влад Рахманов
						b специализируется на мультимодальных перевозках
						+e.A.link.btn._large(href='/contacts.html') получить
							br
							| консультацию
			+reviews
			+clients
			+additional-services
			+map({modifier: 'right'})
			+request-form
