include ../../full-viewport-width/full-viewport-width
include ../../map-large/map-large
include ../../reviews/reviews
include ../../clients/clients
include ../../map/map
include ../../solutions/solutions
include ../../additional-services/additional-services
include ../../video/video
include ../../request-form/request-form
mixin main()
	+b.MAIN.page-content
		+video({
			bgPath: '__static__general/bg_main.png',
			videoPath: '__static__/img/general/video/temperature.mp4'
		})
		+e.inner
			+full-viewport-width(services.temperature)
			.content
				p.text.center Для каждого груза предусмотрен свой температурный режим и правила, при соблюдении которых, грузоперевозка будет безопасной. В качестве транспорта используются рефрижераторы, рефконтейнеры, цистерны с температурным режимом. Осуществляем превозки сборных температурных  грузов.
			+b.SECTION.service-advantages
				+e.inner.center
					+e.H2.title.heading._h2 Преимущества сервиса
					+e.UL.list
						+e.LI.item
							+e.IMG.icon(src="__static__img/content/services/12/icon-1.svg", width='60' height='60')
							b Все классы температурных грузов
							p.text Замороженные – грузы, перевозимые при температуре -6 и ниже, охлажденные – грузы, перевозимые при температуре -5....- 1С, охлаждаемые – грузы, перевозимые при температуре 0....15С, вентилируемые – грузы, перевозимые без создания определенного температурно-влажностного режима, но при обеспечении интенсивной вентиляции в грузовых помещениях.
						+e.LI.item
							+e.IMG.icon(src="__static__img/content/services/12/icon-2.svg", width='60' height='60')
							b Наш сервис
							p.text Осуществляем перевозку температурных грузов автомобильным путем рефрижераторах, в специальных ж/д контейнерах и на самолетах. Последний вид доставки подходит для грузовых перевозок изделий в термоконтейнерах с температурой от +2 до +8°С. Водители компании имеют санитарные книжки,а на автомобили оформлены санитарные паспорта. Транспорт оборудован терморегистраторами. В наличие есть двухсекционные (зонированные) рефы.
			+b.SECTION.progress
				+e.inner.center
					+e.H2.title.heading._h2 Ход выполнения
					+e.UL.list
						+e.LI.item
							img(src='__static__img/content/progress-icons/order.gif')
							b Заполнение
								br
								| заявки
						+e.LI.item
							img(src='__static__img/content/progress-icons/registration.gif')
							b Подписание необходимых документов
						+e.LI.item
							img(src='__static__img/content/progress-icons/cargo_sending.gif')
							b Отправка груза в необходимую точку мира
						+e.LI.item
							img(src='__static__img/content/progress-icons/delivery.gif')
							b Доставка "до двери"
								br
								| клиента
			+b.SECTION.directions-list
				+e.inner.center
					+e.H2.title.heading._h1 наши направления
					+b.direction-list
						+e.A.link.waves-effect.waves-light.style(href='russian-direction.html')
							span Россия
							p Грузоперевозки сборных и комплектных грузов, экспорт и иморт из России в Беларусь и в Беларусь из&nbsp;России
						+e.A.link.waves-effect.waves-light.style(href='asian-direction.html')
							span Азия
							p Грузоперевозки сборных и комплектных грузов, экспорт и иморт из Азии в Беларусь и в Беларусь из&nbsp;Азии
						+e.A.link.waves-effect.waves-light.style(href='european-direction.html')
							span Европа
							p Грузоперевозки сборных и комплектных грузов, экспорт и иморт из России в Беларусь и в Беларусь из&nbsp;России
						+e.A.link.waves-effect.waves-light.style(href='american-direction.html')
							span Америка
							p Грузоперевозки сборных и комплектных грузов, экспорт и иморт из России в Беларусь и в Беларусь из&nbsp;России
			+map-large
			+solutions(solutions)
			+b.SECTION.about-specialist._12
				+e.inner.center
					+e.info
						+e.H2.title.heading._h1 Илья Рахманов
						b специализируется на температурных грузах
						p.text.text_white Lorem ipsum dolor sit amet, consectetur adipisicing elit. Consequatur recusandae debitis reiciendis maxime consequuntur incidunt praesentium, earum. Unde dignissimos ad omnis, ipsum ab voluptatum deserunt distinctio, inventore aperiam perferendis enim?
						+e.A.link.btn._large(href='/contacts.html') получить
							br
							| консультацию
			+reviews
			+clients
			+additional-services
			+map({modifier: 'right'})
			+request-form
