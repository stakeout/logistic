.service-advantages
	&__list
		row-flex()
	&__item
		col()
		size(6)
		position relative
		padding-left 120px
		&:not(:nth-last-child(-n+2))
			margin-bottom 60px
		b
			display block
			margin-bottom 30px
			color #36c
			font-size 18px
			line-height 26px
			font-weight 300
	&__icon
		position absolute
		left 0
//Ход выполнения
.progress
	margin-bottom 90px
	&__list
		row-flex()
	&__item
		col()
		size(3)
		display -webkit-flex
		display -ms-flex
		display flex
		flex-direction column
		align-items center
		text-align center
		b
			color #36c
			font-size 18px
			line-height 26px
			font-weight 300
		img
			margin-bottom 60px
//Наши направления
.directions-list
	background-color $c_blue
	&__title
		padding-top 60px
		padding-bottom 90px
.cargo-types
	&__list
		row-flex()
	&__item
		col()
		size(3)
		display -webkit-flex
		display -ms-flex
		display flex
		flex-direction column
		align-items center
		text-align center
		&:nth-child(-n+4)
				margin-bottom 60px
	&__icon
		margin-bottom 30px
//О специалисте
.about-specialist
	
	background url(__static__content/people.png),
							url(__static__content/pattern_n_a.svg) #0d47a1;
	background-repeat no-repeat, repeat
	background-size 400px 580px, 30px
	background-position calc(50% - 400px) bottom
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
		justify-content: flex-end;
		min-height 65vh
		padding 90px 0
	&__info
		display -webkit-flex
		display -ms-flex
		display flex
		flex-direction column
		flex-basis 50%
		b
			margin-bottom 30px
			color $c_white
			font-size 14px
			line-height 21px
			font-weight 500
			text-transform uppercase
		p
			margin-bottom 100px
	&__title
		margin-bottom 60px
	&__link
		margin-top auto
		font-weight 500
		