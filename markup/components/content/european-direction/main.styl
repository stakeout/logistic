.direction-way
	background-image url(__static__general/bg_european_direction.png)
	background-position top left
	background-size cover
	xxs(min-height, 100vh)
	&__inner
		padding-top 140px
		xxs-block({
		  padding-top: 90px
		})
	&__title
		max-width 655px
		margin-bottom 60px
	&__list 
		max-width 400px
		padding-bottom 70px
		xxs(display, none)
	&__item
		position relative
		min-height 42px
		padding-left 60px
		margin-bottom 30px
		color $c_white
		font-size 14px
		line-height 21px
		font-weight 300
		&:before
			position absolute
			content ''
			width 30px
			height 30px
			top 3px
			left 0
			background-color $c_white
