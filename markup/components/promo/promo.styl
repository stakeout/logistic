.promo
	// background-image url(%=static=%general/bg_main.png)
	// background-repeat no-repeat
	// background-position 100% center
	// background-size cover
	background url(__static__minified-svg/pixel.svg) repeat
	&__inner
		display flex
		flex-direction column
		padding-top 60px
		padding-bottom 60px
		min-height 100vh
	&__request-btn
		margin-top auto
		width 240px
		padding 12px 54px
		margin-bottom 85px
		font-weight 500
	&__info
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		justify-content: space-between;
		xxs(display, none)
	&__phone,
	&__mail
		margin-bottom 15px
		padding-left 30px
		color $c_white
		font-size 14px
		font-weight 300
		line-height 21px
	&__right-col
		color $c_white
		font-size 14px
		font-weight 300
		line-height 21px
		text-align right
		span
			&:last-child
				// opacity 1
				padding-right 30px
		p
			margin-top 15px
	&__left-col
		p
			margin-bottom 15px
	video 
		position: fixed;
		top: 50%;
		left: 50%;
		min-width: 100%;
		min-height: 100%;
		width: auto;
		height: auto;
		z-index: -100;
		transform: translateX(-50%) translateY(-50%);
		background: url('%=static=%general/bg_main.png') no-repeat;
		background-position 100% center
		background-size: cover;
		transition: 1s opacity;
		