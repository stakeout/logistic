.clients
	background-color $c_white
	&__inner
		padding-bottom 60px
	&__item
		display -webkit-flex
		display -ms-flex
		display flex
		flex-direction column
		width 240px
		font-size 14px
		line-height 21px
		margin 0 20px
		padding 0 30px 60px
		border-radius 5px
		box-shadow 0 2px 8px rgba(0,0,0,.15)
		background-repeat no-repeat
		background-size 100px 100px
		background-position 50% 30px
		text-align center
		xxs-block({
			padding-bottom: 40px
		})
		img 
			display block
			margin 40px auto
			width 90px
			height 60px
			xxs(margin, 20px auto)
		b
			display block
			margin-bottom 30px
			color $c_dark-blue
			font-weight 500
			text-align center
			xxs(margin-bottom, 15px)
		p
			color $c_text
			font-weight 300
			xxs(word-wrap, break-word)
		& .sorted
			display none
.filter
	display -webkit-flex
	display -ms-flex
	display flex
	flex-wrap wrap
	xxs(display, none)
	&__item
		margin-right 30px
		margin-bottom 30px
		padding 8px 30px
		color $c_text
		font-size 14px
		font-weight 300
		line-height 21px
		background-color #fafafa
		border-radius 15px
		transition box-shadow .35s ease
		&:hover
			cursor pointer
			box-shadow 0 2px 8px rgba(0,0,0,.15)
		&.active
			background-color $c_white
			box-shadow 0 2px 8px rgba(0,0,0,.15)
