.map-large
	background-color #1e88e5
	background-image url(__static__general/map-not-optimezed.svg)
	background-repeat no-repeat
	background-position center 85%
	background-size 1170px 700px
	xxs-block({
		background-position: center 90%
		background-size: 414px 636px	
	})
	&__inner
		position relative
		min-height 880px
		padding-top 90px
		padding-bottom 90px
		xxs-block({
			display: flex
			flex-direction: column
			min-height: 550px
			padding-top: 30px
			padding-bottom: 30px
		})
	&__link
		display -webkit-flex
		display -ms-flex
		display flex
		flex-direction column
		align-items: center;
		position absolute
		color $c_white
		span
			color $c_white
			font-size 14px
			font-weight 300
			line-height 21px
			text-transform uppercase
			text-shadow 0 3px 6px #000
		&_europe
			top 46%
			left 46%
		&_america
			top 50%
			left 23%
		&_asia
			top 50%
			left 71%
		&_russia
			top 40%
			left 59%
		&_belarus
			top 40%
			left 53%
		&_europe,
		&_america,
		&_asia,
		&_russia,
		&_belarus
			xxs(display, none)
	&__controls
		display none
		xxs-block({
			display: flex
			flex-wrap: wrap
			justify-content: space-between
			align-content: space-between
			margin-top: auto
			text-align: center
			min-height: 130px
		})
		a
			xxs-block({
				flex-basis: 47%
				color: $c_dark-blue
				line-height: 55px
			})
			
.animated {
  animation-duration: 1s;
  animation-fill-mode: both;
}
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}

.fadeInUp {
  animation-name: fadeInUp;
}
