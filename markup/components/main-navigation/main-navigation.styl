.navigation
	display -webkit-flex
	display -ms-flex
	display flex
	flex-wrap wrap
	align-items: center;
	margin-left auto
	xxs-block({
		position: absolute
		left: 0
		top: 0
		display: flex
		flex-wrap: wrap
		width: 100%
		height: 100vh
		margin-left: 0
		padding: 90px 20px 15vh
		background-color: $c_white
		opacity: 0
		transition: all 500ms cubic-bezier(0.68, -0.55, 0.265, 1.55)
		transform: scale(0)
		z-index: 101
	})
	&.open
		opacity 1
		transform scale(1)
	&__inner
		xxs-block({
			display: flex
			flex-wrap: wrap
			justify-content: space-between
			margin-bottom: auto
		})
	&__item
		position relative
		margin-right 25px
		padding 5px 0
		color $c_white
		font-size 14px
		font-weight 300
		line-height 24px
		xxs-block({
			color: $c_text
			flex-basis: 47%
			height: 50px
			margin-right: 0
			margin-bottom: 20px
			align-self: flex-start
			padding: 0
			line-height: 50px
			background-color: $c_light-blue
			text-align: center
			border-radius: 5px
		})
		&.stick
			color $c_text
			&:after
				background-color $c_blue
		&:last-child
			margin-right 0
		&:first-child
			xxs(flex-basis, 100%)
		&:after
			position absolute
			content ''
			right 0
			bottom -2px
			width 0
			height 2px
			background-color $c_white
			transition width .3s ease-out
		&:hover:after
			left 0
			right auto
			width 100%
	&__contacts
		display none
		xxs-block({
			display: flex
			justify-content: space-between
			flex-basis: 100%
			margin-top: auto
		})
	&__phone,
	&__mail
		flex-basis 47%
		height 50px
		line-height 50px
		font-size 0
		xxs-block({
			display: flex
			align-self: flex-end
			box-shadow: none
			})
		svg
			xxs(margin, auto)
			