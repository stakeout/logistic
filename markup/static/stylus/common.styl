// Common styles of the project
// *
// 	outline 1px solid
html {
	box-sizing: border-box;
}
*, *:before, *:after {
	box-sizing: inherit;
}
body
	position relative
	font-family $font
	-webkit-text-size-adjust: 100%;
img
	max-width 100%
	height auto
	box-sizing content-box
a
	text-decoration none
ul
	list-style none
ul,li,p,h1,h2,h3
	margin 0
	padding 0
.style
	background-color $c_white
	border-radius: 5px;
	box-shadow: 0 3px 6px rgba(0, 0, 0, 0.19);
	&:hover
		background-color $c_light-blue
		box-shadow: 0 1px 3px rgba(0,0,0,.19)
		transition all .35s ease
.heading
	text-transform uppercase
	&_h1
		color $c_white
		font-size 24px
		font-weight 500
		line-height 1.5
	&_h2
		padding 80px 0
		color $c_h2-text
		font-size 24px
		font-weight 500
		line-height 1.5
		xxs-block({
			padding: 40px 0
		})
.viewport-width
	padding 90px 0
	background-repeat no-repeat
	background-position center center
	background-size cover
	xxs-block({
	  padding: 60px 0
	})
	h2
		max-width 555px
		margin-bottom 50px
		line-height 36px
	p
		max-width 555px
		margin-bottom 125px
		color $c_white
		font-size 14px
		font-weight 300
		line-height 21px
		xxs(margin-bottom, 90px)
	a
		display block
		font-size 14px
		font-weight 500
		line-height 60px
		text-transform uppercase
		text-align center
.page__inner
	display: flex
	min-height 100vh
	flex-direction column
.page-content
	flex 1
	// background-color #fff
.center
	// outline 1px solid
	wrapper()
.show
	display block
.hide
	display none
.text
	color $c_text
	font-size 14px
	line-height 21px
	font-weight 300
	&_white
		color $c_white
.content-list
	& > li
		position relative
		padding-left 15px
		color $c_text
		font-size 14px
		line-height 21px
		font-weight 300
		&:not(:last-child)
			margin-bottom 10px
		&:before
			position absolute
			left 0
			content '•'
			color $c_blue
			font-size 24px
	.sub-list
		li
			position relative
			padding-left 20px
			margin-top 10px
			&:before
				position absolute
				content '•'
				left 0
				font-size 18px
.btn
	display inline-block
	vertical-align top
	height 60px
	border none
	color $c_white
	font-size 14px
	font-weight 300
	line-height 1.3
	text-transform uppercase
	background-color $c_blue
	border-radius 6px
	box-shadow 0 3px 6px rgba(0, 0, 0, 0.19)
	transition background-color .2s ease
	&_large
		width 240px
		text-align center
		xxs-block({
		  // padding: 10px 0
		})
	&_blue
		background-color #03a9f4
	&:hover
		background-color $c_dark-blue
.btn-mobile
	display inline-block
	vertical-align top
	text-transform uppercase
	border-radius 5px
	&_white
		background-color $c_white
#request-btn
	&.stick
		position fixed
		left calc(50% - 570px)
		bottom 90px
		font-size 0
		width 60px
		height 60px
		margin 0
		padding 0
		border-radius 50%
		background-image url(__static__minified-svg/size-white.svg)
		background-repeat no-repeat
		background-position center
		background-size 28px 28px
		box-shadow 0 3px 6px rgba(0, 0, 0, 0.19)
		z-index 1000
		xxs-block({
			left: calc(50% - 45%)	
			z-index: 99
		})
