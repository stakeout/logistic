// Common styles of the project
html
	box-sizing border-box
*, *:before, *:after
	box-sizing inherit
body
	position relative
	font-family $font
img
	max-width 100%
	height auto
	box-sizing content-box
a
	text-decoration none
ul
	list-style none
ul,li,p,h1,h2,h3
	margin 0
	padding 0
.heading
	text-transform uppercase
	&_h1
		color $c_white
		font-size 24px
		font-weight 500
		line-height 48px
	&_h2
		padding 80px 0
		color $c_h2-text
		font-size 24px
		font-weight 500
		line-height 21px
.page__inner
	display: flex
	min-height 100vh
	flex-direction column
.page-content
	flex 1
.center
	// outline 1px solid
	wrapper()
.show
	display block
.hide
	display none
	outline 2px solid red
.btn
	display inline-block
	vertical-align top
	border none
	color $c_white
	font-size 14px
	font-weight 300
	line-height 21px
	text-transform uppercase
	background-color $c_blue
	border-radius 6px
	box-shadow 0 3px 6px rgba(0, 0, 0, 0.19)
	&_blue
		background-color #03a9f4
.overlay
	display none
	position absolute
	left 0
	top 0
	width 100%
	height 100%
	background-color rgba(0,0,0,.5)
