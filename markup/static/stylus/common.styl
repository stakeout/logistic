// Common styles of the project
html
	box-sizing border-box
*, *:before, *:after
	box-sizing inherit
body
	position relative
	font-family $font
img
	max-width 100%
	height auto
	box-sizing content-box
a
	text-decoration none
ul
	list-style none
ul,li,p,h1,h2,h3
	margin 0
	padding 0
.heading
	text-transform uppercase
	&_h1
		color $c_white
		font-size 24px
		font-weight 500
		line-height 48px
	&_h2
		padding 80px 0
		color $c_h2-text
		font-size 24px
		font-weight 500
		line-height 21px
.viewport-width
	padding 90px 0
	background-repeat no-repeat
	background-position center center
	background-size cover
	h2
		max-width 555px
		margin-bottom 50px
		line-height 36px
	p
		max-width 555px
		margin-bottom 15px
		color $c_white
		font-size 14px
		font-weight 300
		line-height 21px
	a
		display block
		margin-top 145px
		font-size 14px
		font-weight 500
		text-transform uppercase
		text-align center
.page__inner
	display: flex
	min-height 100vh
	flex-direction column
.page-content
	flex 1
.center
	// outline 1px solid
	wrapper()
.show
	display block
.hide
	display none
	outline 2px solid red
.text
	color $c_text
	font-size 14px
	line-height 21px
	font-weight 300
	&_white
		color $c_white
.btn
	display inline-block
	vertical-align top
	border none
	color $c_white
	font-size 14px
	font-weight 300
	line-height 21px
	text-transform uppercase
	background-color $c_blue
	border-radius 6px
	box-shadow 0 3px 6px rgba(0, 0, 0, 0.19)
	&_large
		width 240px
		padding 10px 0
		text-align center
	&_blue
		background-color #03a9f4
	&:hover
		background-color $c_dark-blue
#request-btn
	&.stick
		position fixed
		left calc(50% - 570px)
		bottom 90px
		font-size 0
		width 60px
		height 60px
		margin 0
		padding 0
		border-radius 50%
		background-image url(__static__minified-svg/size-white.svg)
		background-repeat no-repeat
		background-position center
		background-size 28px 28px
		box-shadow 0 3px 6px rgba(0, 0, 0, 0.19)
		z-index 1000
